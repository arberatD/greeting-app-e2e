name: Greeting App E2E Tests

on:
    push:
        branches:
            - main

jobs:
    build-and-test:
        runs-on: ubuntu-latest

        steps:
            - name: Checkout code
                uses: actions/checkout@v2

            - name: Set up Node.js
                uses: actions/setup-node@v2
                with:
                    node-version: 14

            - name: Install dependencies
                run: npm install

            - name: Install Selenium
                run: npm install selenium-webdriver

            - name: Run E2E tests
                run: npm test